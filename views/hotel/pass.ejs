  <div class="container-fluid">
    <div class="col-md-10"><br>
      <form method="post">
        <div class="col-md-6 offset-md-1">
          <div class="row">
            <div class="col-md-2">
              <label for="book">Booked by: </label>
            </div>
            <div class="col-md-3 offset-md-1">
              <input type="text" name="book" id="book" class="btn-lg btn-outline-dark" style="width: 150%;"
                placeholder="Enter your name" required>
            </div>
          </div>
          <br> <br>

          <div class="row">
            <div class="col-md-2">
              <label for="age">Age: </label>
            </div>
            <div class="col-md-3 offset-md-1">
              <input type="number" name="age" id="age" class="btn-lg btn-outline-dark" style="width: 150%;"
                placeholder="Enter your age" required>
            </div>
          </div>
          <br> <br>

          <div class="row">
            <div class="col-md-2">
              <label for="gender">Gender: </label>
            </div>
            <div class="col-md-3 offset-md-1">
              <select class="btn-lg btn-outline-dark" style="width: 150%;" name="gender" required>
                <option value="" disabled="disabled" selected="selected">select your gender</option>
                <option value="1">Male</option>
                <option value="2">Female</option>
              </select>
            </div>
          </div>
          <br> <br>

          <div class="row">
            <div class="col-md-2">
              <label for="contact">Contact: </label>
            </div>
            <div class="col-md-3 offset-md-1">
              <input type="text" name="contact" id="contact" class="btn-lg btn-outline-dark" style="width: 150%;"
                placeholder="Enter your number" required>
            </div>
          </div>
          <br> <br>

          <div class="row">
            <div class="col-md-2">
              <label for="Address">Address: </label>
            </div>
            <div class="col-md-3 offset-md-1">
              <input type="text" name="address" id="address" class="btn-lg btn-outline-dark" style="width: 150%;"
                placeholder="Enter your address" required>

            </div>
          </div>
          <br> <br>
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-2">
                <input type="button" class="btn-danger btn-lg btn-block" style="width: 100%;" value="Back"
                  onclick="window.history.back()" />
              </div>
              <div class="offset-md-8">
                <button type="submit" class="btn-primary btn-lg btn-block" style="width: 100%;">Continue</button>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
